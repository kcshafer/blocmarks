<%= form_for @topic do |f| %>
    <fieldset class="form-group">
        <div class="field">
            <label for="title">Title</label>
            <%= f.text_field :title, id: "title", class: "form-control", placeholder: "Topic Title" %>

            <%= f.submit "Save", class: "btn btn-primary", type: "submit" %>
        </div>
    </fieldset>
<% end %>